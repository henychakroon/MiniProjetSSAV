@model MiniProject.MVC.DTO.SparePartDTO

@{
    ViewData["Title"] = "Create Spare Part";
}

<div class="container">
    <h1 class="mb-4">Create Spare Part</h1>

    <h4 class="text-muted">Spare Part Details</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Name Field -->
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Price Field -->
                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Article Dropdown -->
                <div class="form-group mb-3">
                    <label asp-for="ArticleId" class="form-label">Article</label>
                    <select asp-for="ArticleId" class="form-select" asp-items="ViewBag.ArticleId">
                        <option value="">Select an Article</option>
                    </select>
                    <span asp-validation-for="ArticleId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">Create Spare Part</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
