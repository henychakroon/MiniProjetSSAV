@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-5">
        <h1 class="display-4">Welcome to Our  SAV SYSTEM </h1>
        
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-success text-center mt-4">
            <h5><i class="fas fa-user-check"></i> You are logged in!</h5>
            <p class="mt-3">
                @if (User.IsInRole(ApplicationRoles.CLIENT))
                {
                    <span class="badge bg-primary">Role: Client</span>
                }
                @if (User.IsInRole(ApplicationRoles.SAV))
                {
                    <span class="badge bg-secondary">Role: SAV</span>
                }
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-4">
            <h5><i class="fas fa-exclamation-circle"></i> You are not logged in.</h5>
            <p>
                Please <a href="/Account/Login">log in</a> to access more features.
            </p>
        </div>
    }
</div>

